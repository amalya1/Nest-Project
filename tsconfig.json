{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2019",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts",
    "migrations",
    "config.ts",
    "migrate-mongo-config.js",
    "src/**/*.d.ts",
    "src/user/users.type.ts"
  ]
}
